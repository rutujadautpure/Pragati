<% layout("/layouts/boilerplate")%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Products</title>
    <style>
        /* Overall Page Styling */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            color: #333;
        }

        h1 {
            text-align: center;
            color: #333;
            margin: 40px 0;
        }

        /* Card Group */
        .card-group {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            padding: 20px;
            max-width: 1200px;
            margin: auto;
        }

        /* Individual Card */
        .card {
            width: 100%;
            max-width: 300px;
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
            overflow: hidden;
            background-color: #fff;
        }

        .card:hover {
            transform: scale(1.05); /* Slightly increase size */
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }

        /* Card Image */
        .card-img-top {
            width: 100%;
            height: auto;
            border-bottom: 1px solid #ddd;
            transition: transform 0.3s ease;
        }

        .card:hover .card-img-top {
            transform: scale(1.05); /* Slight zoom effect on image */
        }

        /* Card Body */
        .card-body {
            padding: 15px;
            text-align: center;
        }

        .card-title {
            font-size: 1.5em;
            margin-bottom: 10px;
            color: #333;
        }

        .card-text {
            font-size: 1.1em;
            color: #666;
            margin-bottom: 15px;
        }

        /* Button Styling */
        .btn {
            padding: 12px 20px;
            background-color: #FFC107; /* Yellow */
            color: black;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1.1em;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .btn:hover {
            background-color: #e0a800; /* Slightly darker yellow */
            transform: scale(1.05);
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .card-group {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 600px) {
            .card-group {
                grid-template-columns: repeat(1, 1fr);
            }
        }
    </style>
</head>
<body>

<h1>All Products</h1>

<div class="card-group">
    <% products.forEach(product => { %>
        <div class="card">
            <% product.images.forEach(image => { %>
                <img src="<%= image.url %>" alt="Product Image" style="width: 200px; height: 200px; margin: 5px;">
            <% }); %>

            <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><strong>Price:</strong> â‚¹<%= product.price %></p>
                <a href="/product/<%= product._id %>" class="btn">View Details</a>
            </div>
        </div>
    <% }); %>
</div>

</body>
</html>
