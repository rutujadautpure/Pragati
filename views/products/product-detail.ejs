<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> Details</title>
    <%- include("../layouts/layout.ejs") %>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #f0f4f8;
            color: #333;
            line-height: 1.6;
        }

        .container {
            width: 100%;
            margin: 0 auto;
            padding: 30px 15px;
        }

        .product-detail {
            max-width: 1200px;
            margin: 30px auto;
            background: #fff;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .product-detail h1 {
            font-size: 2.5rem;
            color: #333;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .product-images {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 30px;
        }

        .product-images img {
            width: 32%;
            max-width: 300px;
            height: 300px;
            border-radius: 8px;
            object-fit: cover;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product-description {
            font-size: 1.1rem;
            line-height: 1.8;
            margin-bottom: 20px;
        }

        .price {
            font-size: 1.8rem;
            color: #2c3e50;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .btn {
            display: inline-block;
            background-color: #3498db;
            color: #fff;
            padding: 12px 25px;
            border-radius: 5px;
            font-size: 1.1rem;
            text-decoration: none;
            margin-top: 20px;
            cursor: pointer;
            text-align: center;
            transition: background-color 0.3s ease, transform 0.3s ease;
            position: relative;
            width: auto;
            min-width: 150px;
            white-space: nowrap;
        }

        .btn:hover {
            background-color: #2980b9;
            transform: translateY(-3px);
        }

        .btn-back {
            background-color: #e74c3c;
        }

        .btn-back:hover {
            background-color: #c0392b;
        }

        .options {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 30px;
        }

        .phone-number {
            display: none;
            font-size: 1.2rem;
            color: #333;
            font-weight: bold;
            margin-top: 10px;
        }

        .call-btn:hover + .phone-number {
            display: block;
        }

        .email-tooltip, .phone-tooltip {
            display: none;
            position: absolute;
            background-color: rgba(0, 0, 0, 0.8);
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.9rem;
            bottom: 110%;
            left: 50%;
            transform: translateX(-50%);
            white-space: nowrap;
        }

        .email-btn:hover .email-tooltip, .call-btn:hover .phone-tooltip {
            display: block;
        }

        .whatsapp-btn {
            background-color: #25D366;
        }

        .whatsapp-btn:hover {
            background-color: #128C7E;
        }

        .qr-scanner {
            margin-top: 20px;
            text-align: center;
        }

        .qr-scanner img {
            width: 150px;
            height: 150px;
        }

        @media (max-width: 768px) {
            .product-images {
                flex-direction: column;
                align-items: center;
            }

            .product-images img {
                width: 80%;
                margin-bottom: 20px;
            }

            .options {
                flex-direction: column;
            }

            .btn-back {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="product-detail">
            <h1><%= product.name %></h1>

            <div class="product-images">
                <% if (product.images && product.images.length > 0) { %>
                    <img src="<%= product.images[0] %>" alt="Product Image" class="card-img-top">
                <% } else { %>
                    <img src="https://res.cloudinary.com/<cloud_name>/image/upload/v_default-product.jpg" alt="Default Product Image" class="card-img-top">
                <% } %>
            </div>

            <div class="product-description">
                <p><strong>Description:</strong> <%= product.description %></p>
                <p><strong>Category:</strong> <%= product.category %></p>
            </div>

            <div class="price">
                <p>â‚¹<%= product.price %></p>
            </div>

            <div class="options">
                <% if (product.UserId && product.UserId.mob_no) { %>
                    <a href="tel:<%= product.UserId.mob_no %>" class="btn call-btn">Call Now
                        <span class="phone-tooltip"><%= product.UserId.mob_no %></span>
                    </a>
                <% } %>

                <% if (product.UserId && product.UserId.email) { %>
                    <a href="mailto:<%= product.UserId.email %>" class="btn email-btn">Email to the Seller
                        <span class="email-tooltip"><%= product.UserId.email %></span>
                    </a>
                <% } %>

                <% if (product.UserId) { %>
                    <a href="/seller/<%= product.UserId._id %>" class="btn">More about Seller</a>
                <% } %>

                <!-- Chat to Buy Button -->
                <!-- <% if (product.UserId && product.UserId.mob_no) { %>
                    <a href="https://wa.me/<%= product.UserId.mob_no %>" class="btn whatsapp-btn">Chat to Buy</a>
                <% } %> -->
            </div>

            <!-- QR Scanner Section -->
            <% if (product.UserId && product.UserId.mob_no) { %>
                <div class="qr-scanner">
                    <p>Scan to chat with the seller on WhatsApp:</p>
                    <img src="https://api.qrserver.com/v1/create-qr-code/?data=https://wa.me/<%= product.UserId.mob_no %>&size=200x200" alt="QR Code">
                </div>
            <% } %>

            <button type="button" class="btn btn-back" onclick="window.history.back();">Go Back</button>
        </div>
    </div>

    <footer>
        <p>&copy; 2025 Your Business Name. All rights reserved.</p>
    </footer>
</body>
</html>
