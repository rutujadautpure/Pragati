<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> Details</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #f0f4f8;
            color: #333;
            line-height: 1.6;
        }

        .container {
            width: 100%;
            margin: 0 auto;
            padding: 30px 15px;
        }

        .product-detail {
            max-width: 1200px;
            margin: 30px auto;
            background: #fff;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .product-detail h1 {
            font-size: 2.5rem;
            color: #333;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .product-images {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
            gap: 15px;
        }

        .product-images img {
            width: 32%;
            border-radius: 8px;
            object-fit: cover;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product-description {
            font-size: 1.1rem;
            line-height: 1.8;
            margin-bottom: 20px;
        }

        .price {
            font-size: 1.8rem;
            color: #2c3e50;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .btn {
            display: inline-block;
            background-color: #3498db;
            color: #fff;
            width: 150px;
            height:50px;
            padding: 12px 25px;
            border-radius: 5px;
            font-size: 1.1rem;
            text-decoration: none;
            margin-top: 20px;
            cursor: pointer;
            text-align: center;
            position: relative;
            overflow: hidden;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .btn:hover {
    background-color: #2980b9;
    transform: translateY(-3px);
    opacity: 100;
}

        .btn-back {
            background-color: #e74c3c; /* Red */
        }

        .btn-back:hover {
            background-color: #c0392b;
        }

        .options {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        .options .btn {
            padding: 14px 28px;
            font-size: 1rem;
        }

        footer {
            text-align: center;
            margin-top: 50px;
            font-size: 0.9rem;
            color: #777;
        }

        /* Styling for phone number visibility */
        .phone-info {
            position: absolute;
            bottom: -20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 10px;
            background-color: #fff; /* White background */
            color: black;  /* Black text */
            font-size: 1.2rem;
            border-radius: 5px;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease, bottom 0.3s ease;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-call-now:hover .phone-info {
            opacity: 1;
            bottom: 0px;  /* Position phone number above the button */
        }

        @media (max-width: 768px) {
            .product-images {
                flex-direction: column;
                align-items: center;
            }

            .product-images img {
                width: 80%;
                margin-bottom: 20px;
            }

            .options {
                flex-direction: column;
            }

            .btn-back {
                width: 100%;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="product-detail">
            <h1><%= product.name %></h1>

            <!-- Debugging: Print the UserId object -->
            <div style="color: red;">
                <h3>Debug: UserId Object</h3>
                <pre><%= JSON.stringify(product.UserId, null, 2) %></pre>
            </div>

            <!-- Product Images -->
            <div class="product-images">
                <img src="/<%= product.productImages.image1 %>" alt="Product Image 1">
                <img src="/<%= product.productImages.image2 %>" alt="Product Image 2">
                <img src="/<%= product.productImages.image3 %>" alt="Product Image 3">
            </div>

            <!-- Product Description -->
            <div class="product-description">
                <p><strong>Description:</strong> <%= product.description %></p>
                <p><strong>Category:</strong> <%= product.category %></p>
            </div>

            <!-- Product Price -->
            <div class="price">
                <p>$<%= product.price %></p>
            </div>

            <!-- Contact & Other Options -->
            <div class="options">
                <!-- Call Now Button with hover effect to show the phone number -->
                <a href="tel:<%= product.UserId.supportPhone %>" class="btn btn-call-now">
                    Call Now
                    <h1></h1>
                    <span class="phone-info"><%= product.UserId.mob_no %></span>
                </a>
                <a href="mailto:example@domain.com" class="btn">Chat to Buy</a>
                <a href="/seller/<%= product.UserId._id %>" class="btn">More from Seller</a>
                <a href="/similar-products/<%= product.category %>" class="btn">Similar Products</a>

                
            </div>

            

            <!-- Back Button -->
            <button class="btn btn-back" onclick="window.history.back();">Go Back</button>
        </div>
    </div>

    <footer>
        <p>&copy; 2025 Your Business Name. All rights reserved.</p>
    </footer>

</body>
</html>
