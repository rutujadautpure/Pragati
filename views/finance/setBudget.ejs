<% layout("/layouts/boilerplate")%>


<h2 style="text-align: center; margin-bottom: 20px; margin-top: 30px;">Set Your Budget</h2>

<form action="/finance/set-budget" method="POST" style="max-width: 600px; margin: 0 auto; padding: 20px; background-color: #f8f9fa; border-radius: 10px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);">
    <input type="hidden" name="userId" value="<%= userId %>">

    <div style="margin-bottom: 15px;">
        <label for="budget" style="font-weight: bold; display: block; margin-bottom: 5px;">Enter Budget:</label>
        <input type="number" name="budget" required min="0" style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" id="budget">
    </div>

    <div style="text-align: center;">
        <button type="submit" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;">Save Budget</button>
    </div>
</form>
