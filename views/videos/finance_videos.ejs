<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finance & Category Videos</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }
        h2 {
            text-align: center;
            color: #222;
            font-size: 26px;
            margin-bottom: 20px;
        }
        .video-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 20px;
            justify-content: center;
            padding: 10px;
        }
        .video-card {
            background: #fff;
            padding: 15px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }
        .video-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }
        iframe {
            width: 100%;
            height: 200px;
            border-radius: 8px;
        }
        .description {
            margin-top: 10px;
            font-size: 14px;
            color: #444;
        }
        .description strong {
            font-size: 16px;
            color: #222;
        }
    </style>
</head>
<body>

    <h2>Finance Videos</h2>
    <div class="video-container">
        <% videos.forEach(video => { %>
            <div class="video-card">
                <iframe src="<%= video.url %>" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                <p class="description"><strong><%= video.name %></strong></p>
                <p class="description"><%= video.description %></p>
            </div>
        <% }) %>
    </div>

    <h2><%= categoryName %> Videos</h2>
    <div class="video-container">
        <% categoryVideos.forEach(video => { %>
            <div class="video-card">
                <iframe src="<%= video.url %>" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                <p class="description"><strong><%= video.name %></strong></p>
                <p class="description"><%= video.description %></p>
            </div>
        <% }) %>
    </div>

</body>
</html>
