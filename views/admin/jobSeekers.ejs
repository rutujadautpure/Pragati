<% layout("/layouts/adminBoilerplate") %>
<%- include("../layouts/layout.ejs") %>

<div class="container mt-5">
    <!-- Heading Section -->
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4 bg-light">
                <div class="card-body text-center py-4">
                    <h3 class="fw-bold text-primary">Job Seekers</h3>
                    <h5 class="card-title display-5 text-dark"><%= jobSeekerCount %></h5>
                </div>
            </div>
        </div>
    </div>

    <% if (jobSeekerCount === 0) { %>
        <!-- No Job Seekers Message -->
        <div class="text-center mt-5">
            <img src="https://cdn-icons-png.flaticon.com/512/2748/2748558.png" alt="No Job Seekers Icon" width="150">
            <h2 class="mt-3">No Job Seekers Found</h2>
            <p class="text-muted">There are currently no registered job seekers.</p>
        </div>
    <% } else { %>
        <!-- Job Seekers List -->
        <div class="row mt-5">
            <div class="col-md-12">
                <div class="list-group">
                    <% jobSeekers.forEach(seeker => { %>
                        <div class="card shadow-sm border-0 rounded-4 bg-light mb-2">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="fw-bold text-dark mb-1"><%= seeker.name %></h5>
                                    <p class="mb-0 text-muted">
                                        <i class="fas fa-user text-primary"></i> <strong>Age:</strong> <%= seeker.age %> |
                                        <i class="fas fa-phone-alt" style="color: #3C91E6;"></i> <strong>Mobile:</strong> <%= seeker.mob_no %> |
                                        <i class="fas fa-map-marker-alt text-danger"></i> <strong>Location:</strong> <%= seeker.location.district %>, <%= seeker.location.state %>
                                    </p>
                                </div>
                                <i class="fas fa-user-circle fa-2x text-primary" style="color: #3C91E6;"></i>
                                <!-- <i class="fas fa-briefcase fa-2x" style="color: #3C91E6;"></i> -->
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    <% } %>
</div>
