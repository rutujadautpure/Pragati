<% layout("/layouts/adminBoilerplate") %>
<%- include("../layouts/layout.ejs") %>

<div class="container mt-5">    
    <% if (businessCount === 0) { %>
        <!-- No Businesses Message -->
        <div class="text-center mt-5">
            <img src="https://cdn-icons-png.flaticon.com/512/2748/2748558.png" alt="No Businesses Icon" width="150">
            <h2 class="mt-3">No Businesses Found</h2>
            <p class="text-muted">There are currently no registered businesses.</p>
        </div>
    <% } else { %>
        <!-- Businesses List -->
        <div class="row mt-5">
            <div class="col-md-12">
                <div class="list-group">
                    <% businesses.forEach(business => { %>
                        <div class="card shadow-sm border-0 rounded-4 bg-light mb-2">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="fw-bold text-dark mb-1"><%= business.businessName %></h5>
                                    <p class="mb-0 text-muted">
                                        <i class="fas fa-envelope text-success"></i> <strong>Email:</strong> <%= business.businessEmail %> |
                                        <i class="fas fa-phone-alt" style="color: #3C91E6;"></i> <strong>Phone:</strong> <%= business.businessPhone %>
                                    </p>
                                </div>
                                <i class="fas fa-briefcase fa-2x" style="color: #3C91E6;"></i>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    <% } %>
</div>
